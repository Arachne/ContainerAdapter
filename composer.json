{
    "name": "arachne/container-adapter",
    "description": "Wrapper for Nette DIC which implements ContainerInterface from Symfony.",
    "type": "library",
    "keywords": [ "nette", "arachne", "symfony", "dependency injection" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jáchym Toušek",
            "homepage": "http://enumag.cz",
            "email": "enumag@gmail.com"
        }
    ],
    "require": {
        "php": "^5.5.0|^7.0.0",
        "nette/di": "^2.3.0",
        "symfony/dependency-injection": "^3.0.0"
    },
    "require-dev": {
        "arachne/codeception": "^0.7.3",
        "codeception/codeception": "^2.2.0"
    },
    "autoload": {
        "psr-4": {
            "Arachne\\ContainerAdapter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Integration\\": "tests/integration/src"
        }
    },
    "scripts": {
        "all": [
            "@fix",
            "@analyse",
            "@test"
        ],
        "tools": "sh composer-tools.sh",
        "fix": "\"vendor-tools/bin/php-cs-fixer\" fix",
        "analyse": "\"vendor-tools/bin/phpstan\" analyse --no-progress --level=5 --configuration=phpstan.neon src tests",
        "test": [
            "\"vendor/bin/codecept\" build",
            "\"vendor/bin/codecept\" run --debug"
        ]
    }
}
